<%if current_user.institution_id.present?%>
	<%@institution = Institution.where(id: current_user.institution_id).first%>
	
	<%if @institution.name=="Universidad de Santiago de Chile"%>
		<div class="footer-usach"">
			<div class="no_breakline_left">
					<%= image_tag("Institutions/usach/footerorangeblue.jpg") %>
			</div>
			<div >
				<br>
				<%= link_to 'Solicitudes de Servicio', requests_path %>
				<%= link_to 'Ofertas de Servicios', offerings_path %>
				<%= link_to 'Servicios Activos', services_index_activos_path %>
				<%= link_to 'Experiencias Registradas', experiences_path %>	
				<div class="footer-left">
					<br>
					<p>Universidad de Santiago de Chile. Avenida Libertador Bernardo O'Higgins nº 3363. Estación Central. Santiago. Chile.</p>
					<p>Mesa central (562) 2 718 00 00</p> 
				</div>
				<div class="footer-right">
					<br>
					<%= link_to(image_tag("logoblanco.png", :class=>'logo_footer'),root_path) %>
					<%= link_to(image_tag("Institutions/usach/logo_usach_blanco.png", :class=>'logo_footer'),@institution.web) %>
				</div>
			</div>			
		</div>
	<%end%>	


	<%if @institution.name=="Universidad Técnica Metropolitana"%>
		<style>
			@import url('https://fonts.googleapis.com/css?family=Oswald');
		</style> 
		<div class="footer-utem"">
			<p >SIGUENOS EN:
			<%if current_user.institution.twitter.present?%>
				<%=link_to image_tag("Institutions/utem/twitter.png"), @institution.twitter, :target=>'_blank'%>
			<%end%>
			<%if current_user.institution.facebook.present?%>
				<%=link_to image_tag("Institutions/utem/facebook.png"), @institution.facebook, :target=>'_blank'%>
			<%end%>
			<%if current_user.institution.youtube.present?%>
				<%=link_to image_tag("Institutions/utem/youtube.png"), @institution.youtube, :target=>'_blank'%>
			<%end%>
			<%if current_user.institution.linkedin.present?%>
				<%=link_to image_tag("Institutions/utem/linkedin.png"), @institution.linkedin, :target=>'_blank'%>
			<%end%>
			<%if current_user.institution.instagram.present?%>
				<%=link_to image_tag("Institutions/utem/instagram.png"),@institution.instagram, :target=>'_blank'%>
			<%end%>

		</p>
		<p>Dieciocho 161 - Santiago, Chile. Metro Moneda - Fono: 2787 7500</p>
		</div>
	<%end%>
<%else%>
	<div id="footer">
