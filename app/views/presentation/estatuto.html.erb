<h1>Estatuto Red Nacional Aprendizaje Servicio, Chile</h1>

<div id="indice">
	<div  class="panel panel-default panel-rease">	
		<div class="panel-heading">
			√çndice del estatuto
		</div>
		<div class="panel-body">
			<ul>
				<% @sections.each do |seccion| %>
					<% div_id = seccion.id -%>					
					<li class = "estatuto" id="funcion<%= div_id -%>"> <%= seccion.title %></li>			
				<%end%>
			</ul>
		</div>
	</div>
</div>

<% @sections.each do |seccion| %>
	<% div_id = seccion.id -%>
	<div id="titulo<%= div_id -%>" >
	<br><br>
		<div  class="panel panel-default panel-click " id="volver<%= div_id -%>">
			<div class="panel-heading">
				<i class="glyphicon glyphicon-circle-arrow-up"></i> <%=	seccion.title %> 
			</div>
			<div class="panel-body">
				<p><%=raw seccion.body %></p>
			</div>
		</div>
	</div>
<%end%>

<script type="text/javascript">
	<% @sections.each do |seccion| %>
		<% div_id = seccion.id -%>
		$("#funcion<%= div_id -%>").click(function() 
		{
		    $('html,body').animate({
		        scrollTop: $("#titulo<%= div_id -%>").offset().top},
		        'slow');
		});
		$("#volver<%= div_id -%>").click(function() 
			{
			$('html,body').animate({
			scrollTop: 0},
			'slow');
		});
	<%end%>
</script>